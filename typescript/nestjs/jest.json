{
    "moduleFileExtensions": [
        "ts",
        "tsx",
        "js",
        "json"
    ],
    "transform": {
        "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/src/.*\\.(test|spec).(ts|tsx|js)$",
    "collectCoverageFrom": [
        "src/**/*.{js,jsx,tsx,ts}",
        "!**/node_modules/**",
        "!**/vendor/**",
        "!**/*.spec.ts",
        "!**/*.interface.ts",
        "!**/dist/**"
    ],
    "coverageReporters": [
        "json",
        "lcov",
        "text",
        "html"
    ],
    "coverageDirectory": "coverage",
    "coverageThreshold": {
        "global": {
            "branches": 75,
            "functions": 75,
            "lines": 75,
            "statements": 75
        }
    },
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
        "<rootDir>/test/setup.ts"
    ],
    "testTimeout": 10000,
    "verbose": true,
    "bail": false,
    "forceExit": true,
    "detectOpenHandles": true
}